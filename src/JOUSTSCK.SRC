*
* SOUND ROM 6809 CHECKSUM CALCULATOR & RELOCATOR
*
	ORG	$E000
CKSUM	LDX	#$FFFF	INDEX TO END OF ROM
	LDY	#$1000-1
	CLRB		ZERO CHECKSUM
CKSUM1	ADCB	0,X	ADD IN PROGRAM BYTE
	LEAX	-1,X	TO NEXT BYTE
	LEAY	-1,Y	DONE YET?
	BNE	CKSUM1	NOPE...
	STB	0,X	SAVE CHECKSUM AT BEGINNING
	BRA	*	TURN OFF LEDS
	BRA	CKSUM
*
	END	CKSUM
